 <h1>List of photos</h1>


<form action="/insert_photo_record">
  <label for="browswer_input">Image</label>
  <input id="browswer_input" type ="text" name="input_image" placeholder="Enter a URL for the image..."></input>

  <label for="browswer_caption">Caption</label>
  <textarea id="browswer_caption" name="input_caption" placeholder="Enter a caption for the photo.."></textarea>

  <label for="browswer_user_id">Owner ID</label>
  <input id="browswer_user_id" type="text" name="input_owner_id" placeholder="Enter an ID of a Users">

  <button>Add photo</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

<% @list_of_photos.each do |a_photo| %>

  <tr>
    <td>
      <img src="<%= a_photo.image %>"></img>
    </td>

    <td>
      <%= a_photo.caption %>
    </td>

    <td>
      <%= a_photo.poster.username %>
    </td>

    <td>
      <%= a_photo.created_at %>
    </td>

    <td>
      <a href="/photos/<%= a_photo.id %>">
        Show details
      </a>
    </td>
  </tr>

<% end %>

</table>
